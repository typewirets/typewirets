{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@typewirets/typescript-config/base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
